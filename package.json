  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/types(|/.*)$": "<rootDir>/libs/types/src/$1",
      "^@app/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@app/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@app/infrastructure(|/.*)$": "<rootDir>/libs/infrastructure/src/$1",
      "^@app/entitiesPG(|/.*)$": "<rootDir>/libs/entitiesPG/src/$1"
    }
  },
  "lint-staged": {
    "*.ts": [
      "bash -c tsc --noEmit"
    ],
    "{apps,libs}/**/*.{js,ts}": [
      "eslint --fix --cache"
    ],
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
